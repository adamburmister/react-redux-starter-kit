{
  "compilerOptions": {
    "experimentalDecorators": true,
    "jsx": "preserve",
    "module": "commonjs",
    "noEmit": true,
    "noEmitOnError": true,
    "preserveConstEnums": true,
    "inlineSourceMap": true,
    "target": "es6"
  },
  "filesGlob": [
    "./../typings/tsd.d.ts",
    "./../custom_typings/*.d.ts",
    "./**/*.ts",
    "./**/*.tsx"
  ],
  "files": [
    "./../typings/tsd.d.ts",
    "./../custom_typings/globals.d.ts",
    "./../custom_typings/redux-devtools-dock-monitor.d.ts",
    "./../custom_typings/redux-devtools-log-monitor.d.ts",
    "./../custom_typings/redux-devtools.d.ts",
    "./../custom_typings/redux-simple-router.d.ts",
    "./../custom_typings/tests.d.ts",
    "./framework.spec.ts",
    "./layouts/CoreLayout.spec.tsx",
    "./views/HomeView.spec.tsx"
  ],
  "atom": {
    "rewriteTsconfig": true
  }
}
